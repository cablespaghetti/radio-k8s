rbac:
  enabled: true

# Credit to https://ssl-config.mozilla.org for the basis of this config
ssl:
  enabled: true
  enforced: true
  permanentRedirect: true
  tlsMinVersion: VersionTLS12
  cipherSuites: [
      "TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384",
      "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
      "TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256",
      "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256",
      "TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305",
      "TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305"
    ]

  # Basic auth to protect all the routes. Can use htpasswd to generate passwords
  # > htpasswd -n -b testuser testpass
  # > testuser:$apr1$JXRA7j2s$LpVns9vsme8FHN0r.aSt11
  auth:
    basic:
      testuser: $apr1$JXRA7j2s$LpVns9vsme8FHN0r.aSt11

# Unfortunately DNS was the only challenge type which I could get to work with basic auth turned on
# This will vary depending on your DNS provider
acme:
  enabled: true
  email: myemail@mydomain.com
  staging: false
  challengeType: dns-01
  delayBeforeCheck: 30
  resolvers: ["8.8.8.8:53"]
  dnsProvider:
    name: cloudflare
    cloudflare:
      CLOUDFLARE_EMAIL: "myemail@mydomain.com"
      CLOUDFLARE_API_KEY: "mycloudflareglobalapikey"
